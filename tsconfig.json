{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["dom"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/", "src/types/*"]
        }
    },
    "include": ["src/**/*"]
}
